<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="#6e99e2" />
                </shape>
            </item>
            <item android:bottom="17dp" android:top="17dp" android:left="55dp" android:right="55dp">
                <bitmap android:gravity="fill" android:src="@drawable/ic_facebook" />
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="#507ECC" />
                </shape>
            </item>
            <item android:bottom="17dp" android:top="17dp" android:left="55dp" android:right="55dp">
                <bitmap android:gravity="fill" android:src="@drawable/ic_facebook" />
            </item>
        </layer-list>
    </item>

</selector>