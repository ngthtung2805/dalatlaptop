<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginRight="5dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/selectedBoarderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/pad_margin_10dp"
        android:paddingRight="@dimen/pad_margin_10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:weightSum="1.0">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".80"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:src="@drawable/ic_category_wish" />

        <com.tungnui.abccomputer.view.MontserratTextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:textColor="@color/title_color"
            android:textSize="14sp"
            android:text="Category name" />

    </LinearLayout>

</android.support.v7.widget.CardView>